{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug TinyURL Service",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-tinyurl",
            "program": "${workspaceFolder}/DSAProblems/03_TinyUrlService/TinyUrlService/bin/Debug/net8.0/TinyUrlService.dll",
            "args": [],
            "cwd": "${workspaceFolder}/DSAProblems/03_TinyUrlService/TinyUrlService",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Attach to TinyURL Service",
            "type": "coreclr",
            "request": "attach",
            "processName": "TinyUrlService"
        }
    ]
}
